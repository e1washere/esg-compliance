# Environment
NODE_ENV=development
PORT=3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=esg_compliance_db
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_SSL=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_REFRESH_EXPIRES_IN=30d

# Email (Example using Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@esg-compliance.pl
SMTP_FROM_NAME=ESG Compliance Platform

# AWS
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-central-1
AWS_S3_BUCKET=esg-compliance-docs

# Sentry (optional)
SENTRY_DSN=

# Frontend URL
FRONTEND_URL=http://localhost:5173

# OpenAI API (optional, for AI recommendations)
OPENAI_API_KEY=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Polish Utility Providers (examples)
TAURON_API_URL=https://api.tauron.pl/v1
TAURON_API_KEY=
PGE_API_URL=https://api.pge.pl/v1
PGE_API_KEY=
ENEA_API_URL=https://api.enea.pl/v1
ENEA_API_KEY=

# Session
SESSION_SECRET=your_session_secret_here

# Logging
LOG_LEVEL=info